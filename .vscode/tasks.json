{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe 生成活动文件",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fo${fileDirname}\\..\\build\\${fileBasenameNoExtension}.obj",
                "/Fd${fileDirname}\\..\\build\\${fileBasenameNoExtension}.pdb",
                "/Fe${fileDirname}\\..\\build\\${fileBasenameNoExtension}.exe",
                "${file}",
                "/link",
                "/DEBUG",
                "/PDB:${fileDirname}\\..\\build\\${fileBasenameNoExtension}.pdb",
                "/INCREMENTAL:NO"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "Prepare build dir",
            "detail": "把中间文件输出到 build 目录，并禁用增量链接以避免 .ilk 文件。"
        }
    ]
}